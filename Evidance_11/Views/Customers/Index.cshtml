@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-12">
        <h3>Customers</h3>
        <div class="d-flex justify-content-end mb-1">
            <a class="btn btn-outline-light" asp-controller="Customers" asp-action="Create"><b>Add New</b></a>
        </div>
        <table class="table table-bordered" style="border-color: #647687">
            <thead style="background-color: #B0C4DE">
                <tr>
                    <th>Customer Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>City</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cus in Model)
                {
                <tr style="background-color: rgba(100, 118, 135, .2)">
                    <td  style="color:white">@cus.CustomerName</td>
                    <td>@cus.PhoneNumber</td>
                    <td>@cus.Email</td>
                    <td>@cus.City</td>
                    <td>
                        <a class="btn btn-outline-success btn-sm" asp-controller="Customers" asp-action="Edit" asp-route-id="@cus.CustomerId"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Customers" asp-action="Delete" asp-route-id="@cus.CustomerId"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section styles{ 
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}