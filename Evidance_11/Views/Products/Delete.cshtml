@model Product
@{
    ViewData["Title"] = "Delete";
}
<style>
    #Box {
        margin-left: 180px;
        margin-right: 270px;
        background-color: rgba(0, 0, 0, .2);
        box-shadow: 0 4px 8px 0 rgb(10 52 47 / 0.2), 0 6px 20px 0 rgba(6, 114, 101, .2);
        padding: 10px;
    }
</style>
<div class="row" id="Box">
    <div class="col-12">
        <h3>Delete Product</h3>
        <form method="post" asp-action="Delete" asp-controller="Products" asp-route-ProductId="@Model.ProductId" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group row mb-2">
                <label asp-for="ProductName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-6">
                    @Model.ProductName
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Price" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-6">
                    @Model.Price
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="SalesDate" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-6">
                    @Model.SalesDate
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Picture" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-6">
                    @Model.Picture
                </div>
                <div class="col-1">
                    <img src="/Uploads/@ViewBag.CurrentPic" style="width:35px" class="img-thumbnail" />
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="CustomerId" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-5">
                    @Model.Customer.CustomerName
                </div>
            </div>
            <div class="form-group row my-1 align-middle">
                <div class="col-4 offset-2">
                    <div class="form-check form-check-inline">
                        @Model.Discontinued
                        <label asp-for="Discontinued" class="form-check-label "></label>
                    </div>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-outline-danger">Confirm Delete</button>
                </div>
            </div>
        </form>
    </div>
    <div class=" col-12">
        <button type="submit" class="btn btn-outline-light">
            &lt;&lt;&lt;@Html.ActionLink("Back To List", "Index")
        </button>
    </div>
</div>
@section styles{
    <link href="~/libs/picker/css/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/picker/js/bootstrap-datepicker.js"></script>
}