@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>Products</h3>
        <div class="d-flex justify-content-end mb-1">
            <a class="btn btn-outline-light" asp-controller="Products" asp-action="Create"><b>Add New</b></a>
        </div>
        <table class="table table-bordered" style="border-color: #647687">
            <thead style="background-color: #B0C4DE">
                <tr>
                    <th>Picture</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>SalesDate</th>
                    <th>Customer</th>
                    <th>Discontinued</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                <tr style="background-color: rgba(100, 118, 135, .2)">

                    <td><img src="/Uploads/@p.Picture" style="width:40px" class="img-thumbnail border-dark" width="40" /></td>
                    <td>@p.ProductName</td>
                    <td>@p.Price</td>
                    <td>@p.Customer.CustomerName</td>
                    <td>@p.SalesDate</td>
                    <td>@(p.Discontinued ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-outline-success btn-sm" asp-controller="Products" asp-action="Edit" asp-route-id="@p.ProductId"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Products" asp-action="Delete" asp-route-id="@p.ProductId"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section styles{
    <link href="~/libs/icons/font/bootstrap-icons.css" rel="stylesheet" />
}

